{
  "manifest_version": 2,
  "name": "Music Smith",
  "version": "1.0.0",
  "description": "Play music!",
  "short_name": "MS",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["background.css"],
      "js": ["main.js"]
    }
  ],
  "browser_action": {
    "default_title": "Plays lofi hip hop music",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lofiP.png",
      "32": "lofiP.png",
      "128": "lofiP.png"
    }
  }
 }