{
  "manifest_version": 2,
  "name": "Music Smith",
  "version": "1.0.0",
  "description": "Play music!",
  "short_name": "MS",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["background.css"],
      "js": ["main.js"]
    }
  ],
  "browser_action": {
    "default_title": "Does a thing when you do a thing",
    "default_popup": "popup.html"
    // "default_icon": {
      // "16": "icons/icon16.png",
      // "32": "icons/icon32.png"
    // }
  }
 }